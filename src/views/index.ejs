<!DOCTYPE html>
<html>

<%- include('./partials/head.ejs') %>

<body>

  <!-- Navbar (sit on top) -->
  <%- include('./partials/nav') %>

  <!-- Header -->
  <%- include('./partials/header') %>

  <!-- Page content -->
  <div class="ps-content">

    <!-- About Section -->
    <%- include('./partials/about.ejs') %> 

    <!-- Menu Section -->
    <div class="ps-row ps-padding-64" id="menu">
      <div class="ps-col l6 ps-padding-large">
        <h1 class="ps-center">Nuentro Menu</h1>
        <br />

        <% platos.forEach(element => { %> 
          <h4> <a href="/detalle/<%= element.id %>"> <%= element.title %> </a> </h4>
          <p class="ps-text-grey"> <%= element.description %> <%= element.price %>  </p>
        <% }) %> 
        
      </div>

      <div class="ps-col l6 ps-padding-large ps-img-menu">
        <img src="/images/menu.jpg" class="ps-round ps-image ps-opacity-min" alt="Menu" />
      </div>
    </div>

    <!-- Footer -->
    <%- include('./partials/footer') %>

  </div>
</body>

</html>