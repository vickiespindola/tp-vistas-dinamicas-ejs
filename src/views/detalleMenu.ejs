<!DOCTYPE html>
<html>

<%- include('./partials/head.ejs') %>

<body>

  <!-- Navbar (sit on top) -->
  <%- include('./partials/nav') %>

  <!-- Header -->
  <%- include('./partials/header') %>

  <!-- Page content -->
  <div class="ps-content">

    <!-- Menu Section -->
    <div class="ps-row ps-padding-64" id="menu">
      <div class="ps-col l6 ps-padding-large">
        <h1 class="ps-center"> <%= plato.title %> </h1>
        <br />
        <% if(plato.description){ %> 
        <h4> <%= plato.description %> </h4>
        <% } else{ %> 
          <h4>Plato t√≠pico</h4>
        <% } %> 
        <p class="ps-text-grey">
          <%= plato.price %> 
        </p>
      </div>

      <div class="ps-col l6 ps-padding-large ps-img-menu">
        <img src="/images/<%= plato.image %>" class="ps-round ps-image ps-opacity-min" alt="Plato" />
      </div>
    </div>

    <!-- Footer -->
    <%- include('./partials/footer') %>

  </div>
</body>

</html>